		<dependency>
			<groupId>com.extjs.gxt</groupId>
			<artifactId>gxt</artifactId>
			<version>2.0</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>gwt2swf</groupId>
			<artifactId>gwt2swf</artifactId>
			<version>0.6.0</version>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>hotmath</groupId>
			<artifactId>hotmath</artifactId>
