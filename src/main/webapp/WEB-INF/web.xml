      hotmath.cm.login.service.LoginService
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CmLoginService</servlet-name>
    <url-pattern>
      /cm/loginService
    </url-pattern>
  </servlet-mapping>
