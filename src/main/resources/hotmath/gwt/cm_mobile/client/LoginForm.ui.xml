<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	    .formLayout {
	    	background: #05326D;
	    	margin: 20px;
	    	color: white;
	    	width: 300px;
	     }
	     
		.heading {
			color: #4282D3;
			font-weight: bold;
			font-size: 1.1em;
			text-align: center;
			margin-top: 10px;
		}
	</ui:style>
	
	<g:DialogBox ui:field="loginBox" autoHide="false" modal="true"
		glassEnabled="true" animationEnabled="true" styleName="{style.formLayout}">
		<g:HTMLPanel styleName="{style.heading}">
		   <h2 style="{style.heading}">Catchup Math Mobile</h2>
			<table   style='color: white;margin: 20px 0 15px 10px;' >
				<tr>
					<td>Username:</td>
					<td>
						<g:TextBox ui:field='usernameBox' />
					</td>
				</tr>
				<tr>
					<td>Password:</td>
					<td>
						<g:PasswordTextBox ui:field='passwordBox' />
					</td>
				</tr>
			</table>
            <g:Button ui:field='loginButton'>Sign In</g:Button>			
		</g:HTMLPanel>

	</g:DialogBox>

</ui:UiBinder> 