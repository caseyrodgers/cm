<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://ehcache.sf.net/ehcache.xsd">
<!--  
   
   Configuration for ehcache used by 
   hotmath.cm.util.CmCacheMangager
   
   Each cache name should be defined in the 
   static enum CachName in CmCacheManager 

 -->
<defaultCache
        maxElementsInMemory="10000"
        eternal="false"
        timeToIdleSeconds="120"
/>

<!--  For HaTestDef -->
<cache name="TEST_DEF"
       maxElementsInMemory="100"
       eternal="true"
       overflowToDisk="false">
</cache>

<!--  For HaTest -->
<cache name="TEST"
       maxElementsInMemory="100"
       eternal="true"
       overflowToDisk="false">
</cache>

<!-- For HA_PROG_DEF -->
<cache name="PROG_DEF"
       maxElementsInMemory="50"
       eternal="true"
       overflowToDisk="false">
</cache>

<!--  For Test HTML -->
<cache name="TEST_HTML"
       maxElementsInMemory="50"
       eternal="false"
       timeToLiveSeconds="120"
       overflowToDisk="false">
</cache>

<!--  For Test TEST_HTML_CHECKED, which is the results -->
<cache name="TEST_HTML_CHECKED"
       maxElementsInMemory="50"
       eternal="false"
       timeToLiveSeconds="120"
       overflowToDisk="false">
</cache>

<!-- Description of HaTestDef including all associated lesson names -->
<cache name="TEST_DEF_DESCRIPTION"
       maxElementsInMemory="50"
       eternal="true"
       overflowToDisk="false">
</cache>

<!-- For temporary caching of student UIDs needed for Admin Reports -->
<cache name="REPORT_ID"
       maxElementsInMemory="100"
       eternal="false"
       timeToLiveSeconds="300"
       overflowToDisk="false">
</cache>

</ehcache>
