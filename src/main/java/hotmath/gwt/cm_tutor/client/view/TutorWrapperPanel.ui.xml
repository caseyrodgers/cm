<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:style>
        .tutorOutput {
            position: relative;
        } 
        
        .readonlyMask {
            position: absolute;
            top: 0;
            left: 0;
            background: gray;
            z-index: 1000;
            display: none;
        }
        
        .readonlyMaskText {
            margin: auto;
        }

    </ui:style>
    

    <g:HTMLPanel>
        <!-- HOTMATH BODY START -->
        <div id="tutoroutput" style='display: block;position: relative;'>
            <div ui:field="readonlyMask" class='{style.readonlyMask}' onclick='gwt_tutorIsReadonlyMessage()'>
               <div class='{style.readonlyMaskText}'>Read Only</div>
            </div>
            <div class='problem-title' ui:field="title"></div>
            <div id='tutor_raw_steps_wrapper'>
                  <span style='font-type: italic;color: #666'>Loading ...</span>
            </div>
            
            

            <span ui:field='buttonBar'>
            <div id='steps_tail'>
                
                <button class='sexybutton sexy_cm_silver disabled' id='steps_prev'
                    onclick="TutorManager.showPreviousStep();" accesskey="n">
                    <span>
                        <span>Prev</span>
                    </span>
                </button>
                

                <button class='sexybutton sexy_cm_silver' id='steps_next'
                    onclick="TutorManager.showNextStep();" accesskey="n">
                    <span>
                        <span>Next</span>
                    </span>
                </button>
                
                <button ui:field="returnButton" class='sexybutton sexy_cm_silver'
                    onclick="TutorManager.newProblem();return false;" accesskey="s">
                    <span>
                        <span>Return</span>
                    </span>

                </button>

                <button ui:field="whiteboardButton" class='sexybutton sexy_cm_silver' 
                    onclick="TutorManager.showWhiteboard();return false;" accesskey="s">
                    <span>
                        <span>Whiteboard</span>
                    </span>
                </button>

                
                <div class='cm-tutor-button-bar-bottom' style='display: none;float: right;'>
                    <a class='button debug-off' href='javascript:void(0)' onclick='expandAllSteps();return false;'>Expand
                    </a>
                </div>
                <div id='tutor_message'>
                </div>
            </div>
            </span>
            <!-- HOTMATH BODY END -->
            <div id='refresh_problem_button'></div>
            <img id='scrollTo-button' src='/assets/images/spacer.gif'/>
        </div>
        <!-- END TUTOR GUTS -->
        <div class='debug-hide' >
            <g:Button ui:field="debugInfo" >Debug</g:Button>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
