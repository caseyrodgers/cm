<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.main {
		    padding: 10px;
		}

        .main label {
            font-weight: bold;
        }

        .main div div {
            margin-bottom: 15px;
        }
         
		.programInfo {
		    margin: 5px;
		    padding: 10px;
		    color: #666;
		}
	</ui:style>

	<g:HTMLPanel styleName="{style.main}">
	   <p>You are logged in as: <span ui:field="loggedInAs"></span></p>
	   <div style='display: none' class='{style.programInfo}' ui:field="programInfo">
	       <label>Program: </label> 
	       <div ui:field="programName">Unknown</div>
           <label>Graded Problem Score</label>
           <div ui:field="score">--</div>
	   </div>
		<p>
            For more detailed information about Catchup Math, 
            please visit on a desktop computer.
        </p>
		<p>Email feedback or questions to support@hotmath.com.</p>
	</g:HTMLPanel>
</ui:UiBinder> 