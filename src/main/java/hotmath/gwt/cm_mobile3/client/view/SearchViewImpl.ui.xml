<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	   .main {
	      margin: 20px;
	   }
	   
	   .search_box {
	      width: 400px;
	      margin-bottom: 20px;
	   }
	   
	   .search_box p {
	      font-size: .9em;
	      color: #666;
	   }
	   
	   .list-items {
	      margin-top: 25px;
	   }
	</ui:style>

	<g:HTMLPanel styleName="{style.main}">
	    <div class="{style.search_box}">
	        <span>Search for Topic: </span>
	        <g:TextBox ui:field='searchField'/>
	    <p>
	        Enter a word or phrase in the textbox. 
	        Then select a lesson to explore the text, video, activity and practice problems.
	    </p>
	        
	    </div>
		<g:Button styleName='sexybutton sexy_cm_silver' ui:field='searchButton'>
			<span>
				<span>Search Catchup Math</span>
			</span>
		</g:Button>
		
		<g:SimplePanel styleName="{style.list-items}" ui:field='listItemsDiv'>
		
		
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 