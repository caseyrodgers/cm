<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cm="urn:import:hotmath.gwt.cm_mobile_shared.client.ui">

	<g:HTMLPanel styleName="quizViewImpl" ui:field="quizView">
		<p>
			Take the
			<span ui:field="questionCount"></span>
			question quiz below and then click the Check Quiz button at the top
			or bottom of the quiz.
		</p>
		<div class='buttonBar'>
			<cm:TouchButton ui:field="checkQuizTop" styleName="sexybutton sexy_cm_silver">
				<span>
					<span>Check Quiz</span>
				</span>
			</cm:TouchButton>
		</div>
		<div ui:field="quizHtml"></div>
		<div class='buttonBar'>
           <cm:TouchButton ui:field="checkQuizBottom"  styleName="sexybutton sexy_cm_silver">
				<span>
					<span>Check Quiz</span>
				</span>
			</cm:TouchButton>
		</div>	
	</g:HTMLPanel>

</ui:UiBinder> 