<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel styleName="quizViewImpl" ui:field="quizView">
		<p>
			Take the
			<span ui:field="questionCount"></span>
			question quiz below and then click the Check Quiz button at the top
			or bottom of the quiz.
		</p>
		<div class='buttonBar'>
			<g:Button ui:field="checkQuizTop" styleName="sexyButton sexylarge">
				<span>
					<span>Check Quiz</span>
				</span>
			</g:Button>
		</div>
		<div ui:field="quizHtml"></div>
		<div class='buttonBar'>
           <g:Button ui:field="checkQuizBottom"  styleName="sexyButton sexylarge">
				<span>
					<span>Check Quiz</span>
				</span>
			</g:Button>
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 