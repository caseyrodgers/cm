<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

        <ui:style>
            .main {
                padding: 10px;
            }
            .main .footer {
                margin-top: 30px;
                padding-left: 10px;
                padding-bottom: 5px;
            }
        </ui:style>

        <g:HTMLPanel styleName="{style.main}">
            <ul>
                <li>First, select your textbook.</li>
                <li>Then, enter a page number and select your problem.</li>
                <li>To see the hints and steps, click the arrow buttons.</li>
            </ul>
             <div class='{style.footer}'>
              <g:Button styleName='sexybutton sexysimple' ui:field="closeButton"><span class='ok'>Close</span></g:Button>
           </div>
        </g:HTMLPanel>
</ui:UiBinder>
