<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	    .main {
	    	padding: 10px;
	    }
	    .main .footer {
	        text-align: right;
	        padding-right: 10px;
	        padding-bottom: 5px;
	    }
	</ui:style>

	<g:HTMLPanel styleName="{style.main}">
	    <p>Hotmath Mobile is the mobile version of the award winning math tutorial site Hotmath.com.</p>
	    <h2>To Use</h2>
	    <p>
	       First, identify the subject.  Then choose your book and page number.
	    </p>
	    <h2>More Information</h2>
	    <p>
	       For more information please visit <a href='http://hotmath.com'>Hotmath.com</a> from your desktop.
	    </p>
	    <div class='{style.footer}'> 
	       <g:Button styleName='sexybutton sexysimple' ui:field="closeButton"><span class='ok'>Close</span></g:Button>
	    </div>
	</g:HTMLPanel>
</ui:UiBinder> 