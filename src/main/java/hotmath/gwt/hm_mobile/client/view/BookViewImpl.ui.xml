<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	</ui:style>

	<g:HTMLPanel styleName='bookViewImpl'>
		<div class='book-item'>
			<img ui:field="bookImage" />
			<div>
				<div class='field'>
					<span ui:field="title" />
				</div>
				<div class='field'>
					<span ui:field="author" />
				</div>
				<div class='field'>
					<span>Pages: </span>
					<span ui:field="minPage" />
					-
					<span ui:field="maxPage" />
				</div>
			</div>
		</div>

		<div>
		    <span>Page: </span>
            <g:Button styleName='sexybutton' ui:field="getPrevProblems">
				<span>
					<span>&lt;</span>
				</span>
			</g:Button>
			<span>
				<g:TextBox ui:field='pageNumber' />
			</span>
            <g:Button styleName='sexybutton' ui:field="getNextProblems">
				<span>
					<span>&gt;</span>
				</span>
			</g:Button>
			<g:Button styleName='sexybutton' ui:field="getProblems">
				<span>
					<span>Go</span>
				</span>
			</g:Button>
						
		</div>
		<br style='clear: both;' />
		<g:HTMLPanel ui:field="messageDiv">
			<h2>
				<span ui:field="messageText" />
			</h2>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="problemNumberDiv">
			<h1>
				Problems on page:
				<span ui:field="pageProbNums" />
			</h1>
			<g:HTMLPanel ui:field="problemNumberList"></g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 