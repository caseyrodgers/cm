<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	</ui:style>

	<g:HTMLPanel styleName='bookViewImpl'>
		<div class='book-item'>
			<img ui:field="bookImage" />
			<div>
				<div class='field'>
					<span ui:field="title" />
				</div>
				<div class='field'>
					<span ui:field="author" />
				</div>
				<div class='field' style='display: none'>
					<span>Pages: </span>
					<span ui:field="minPage" />
					-
					<span ui:field="maxPage" />
				</div>
			</div>
		</div>

		<div class='book-button-bar'>
		    Page: 
            <g:Button styleName='sexybutton' ui:field="getPrevProblems">
				<span>
					<span>&lt;</span>
				</span>
			</g:Button>
			<g:TextBox ui:field='pageNumber' />
            <g:Button styleName='sexybutton' ui:field="getNextProblems">
				<span>
					<span>&gt;</span>
				</span>
			</g:Button>
			<g:Button styleName='sexybutton' ui:field="getProblems">
				<span>
					<span>Go</span>
				</span>
			</g:Button>
			<span class='bookMessage' ui:field="bookMessage"/>
		</div>
		<br style='clear: both;' />
		<g:HTMLPanel ui:field="messageDiv">
			<h2>
				<span ui:field="messageText" />
			</h2>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="problemNumberDiv">
			<div style='prob-nums-title' ui:field="probNumsTitle">
			</div>
			<g:HTMLPanel ui:field="problemNumberList"></g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 