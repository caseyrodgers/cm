<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main {}

		.main button span span {
		   font-size: 1.2em;
		}

		.content {
		padding: 10px;
		text-align: center;
		}

		.content li, .content p {
		margin-bottom: 10px;
		}
		
		.button {
		   width: 300px;
		   margin-bottom: 20px;
		}
		
		li {
		   list-style-type: none;
		   text-align: center;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<h1>Hotmath Mobile!</h1>
		<div styleName='{style.content}'>
			<p>Find your math textbook and then explore the Hotmath Solutions.</p>
			<ul>
				<li>
					<g:Button styleName='{style.button} sexybutton sexybutton_xxl-aqua' ui:field="navigateTo">
						<span>
							<span>Search by Subject</span>
						</span>
					</g:Button>
				</li>
				<li>
					<g:Button styleName='{style.button} sexybutton sexybutton_xxl-aqua' ui:field="searchTo">
						<span>
							<span>Text Search</span>
						</span>
					</g:Button>
				</li>
			</ul>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 