<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	    .content {
			padding: 10px;
			line-height: 2em;
	    }
	</ui:style>
    <g:HTMLPanel styleName='{style.content}'>
	    <p>Enter any part of the title, publisher or ISBN of the text you are searching for.</p>
	    <g:TextBox ui:field="textBox"></g:TextBox>
	    <g:Button styleName="sexybutton" ui:field="search"><span><span>Search</span></span></g:Button>
    </g:HTMLPanel>
</ui:UiBinder> 