<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	    .main {
	    }
	    .main .footer {
	        text-align: right;
	        padding-right: 10px;
	        padding-bottom: 5px;
	    }
	</ui:style>

	<g:HTMLPanel styleName="{style.main}">
	    <p>Please enter your feedback comments below.</p>
	    
	    <g:TextArea ui:field='textArea'></g:TextArea>
	    
	    <div class='{style.footer}'> 
	       <g:Button styleName='sexybutton sexysimple' ui:field="cancelButton">Cancel</g:Button>
	       <g:Button styleName='sexybutton sexysimple' ui:field="okButton"><span class='ok'>OK</span></g:Button>
	    </div>
	</g:HTMLPanel>
</ui:UiBinder> 