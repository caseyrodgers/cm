<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
    
        .main {
            margin: 2px;    
        }
        
        .snuggle {
            float: left;
            margin: 0;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:TextBox styleName="{style.snuggle}" ui:field="searchField"/>
        <g:Button styleName="{style.snuggle}" ui:field="doSearch" text="Search"/>
    </g:HTMLPanel>
    
</ui:UiBinder> 