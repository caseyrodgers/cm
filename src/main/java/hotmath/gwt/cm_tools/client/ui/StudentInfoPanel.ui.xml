<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cm="urn:import:hotmath.gwt.cm_mobile_shared.client.ui">
	<ui:style>
         .table {
             margin-left: 20px;
         }
         
         .field {
             font-weight: bold;
             width: 150px;
             text-align: right;
         }
         
         .bottom {
             margin-bottom: 20px;
         }
         
         .table tbody {
             margin: 0;
             padding: 0;
         }
	
	</ui:style>
    <g:HTMLPanel>
    <table class='{style.table}' width='100%' cellpadding='0' cellspacing='3'>
        <tbody>
            <tr>
                <td width='50%'><span class='{style.field}'>Password:</span> <span ui:field='password'/> </td>
                <td width='50%'><span class='{style.field}'>Show Work:</span> <span ui:field='showWork'/></td>
             </tr>
             <tr class='{style.bottom}'>
                 <td width='50%'><span class='{style.field}'>First-time Answers: </span> <span ui:field='widgetPercent'/></td>
                 <td width='50%'><span class='{style.field}'>Active Time:</span> <span ui:field='activeMinutes'/></td>
             </tr>
        </tbody>
    </table>
	</g:HTMLPanel>
</ui:UiBinder> 