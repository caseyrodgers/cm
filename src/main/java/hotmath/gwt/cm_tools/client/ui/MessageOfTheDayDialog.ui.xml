<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	    .main {
	        padding:10px 15px;
	        font-size: 1.1em;
	    }
	    
	    .main p {
	       padding-top: 10px;
	       }
	    .main ul {
	        margin-top: 10px;
	        list-style-type: disc;
	    }
	    
	    .main ul li {
	        line-height: 1.5em;
	        margin-left: 10px;
	        list-style-type: disc;
	    }
	    .main h1 {
	        margin-bottom: 10px;
	        color: red;
	    }
	</ui:style>

    <g:HTMLPanel styleName='{style.main}' ui:field='mainPanel'>
       <h1>New Built-in Custom Program for CCSS Optional Standards</h1>
       <ul>
           <li>
              We added a new built-in Custom Program called Optional Topics that
              includes lessons for topics in the CCSS optional category.
           </li>
           <li>
              You can copy the Optional Topics custom program to choose desired
              lessons, and also use it for creating custom quizzes.
           </li>
        </ul>
	</g:HTMLPanel>

</ui:UiBinder> 
