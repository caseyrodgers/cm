<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	    .main {
	        padding:10px 15px;
	    }
	    
	    ol {
	        padding: 10px 15px;
	    }
	    ol li {
	        list-style-type: decimal;
	        line-height: 1.5em;
	    }
	    .main h1 {
	        margin-bottom: 10px;
	    }
	</ui:style>

    <g:HTMLPanel styleName='{style.main}'>
    <h1>Real Time Monitoring During Class: Use Highlights</h1>
    <ol>
      <li>Use the Group select at the bottom of the page.</li>
      <li>Set the Date Range to Today/Today at the bottom of the page.</li>
      <li>Click the Highlights button.</li>
      <li>Update using the Highlights Refresh button.</li>
    </ol>
	</g:HTMLPanel>

</ui:UiBinder> 
