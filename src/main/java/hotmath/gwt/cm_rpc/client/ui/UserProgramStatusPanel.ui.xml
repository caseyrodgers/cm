<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:cm="urn:import:hotmath.gwt.cm_mobile_shared.client.ui">
    <ui:style>
    
    .wrapper {
        margin: 20px;
    }
    
    .wrapper h1 {
        margin-bottom: 0;
    }

    .wrapper label {
        font-weight: bold;
    }
    
    .wrapper p {
        font-size: 1em;
    }
    
    .field {
        
    }
    

    </ui:style>
    <g:HTMLPanel>
        <div class='{style.wrapper}'>
            <div class='group'>
                <h1>Required Practice Problems:</h1>
                <p>Represents the total number of required practice problems you have completed.</p>                
                <div class='{style.field}'>
                    <label>Count: </label>
                    <span ui:field="rppCount"/>
                </div>
            </div>
            
            <div class='group'>
                <h1>Graded Practice Problems</h1>
                <p>
                   The graded percent is calculated from the first entry into a graded practice problem.
                </p>
                <div class='{style.field}'>
                    <label>Count: </label>
                    <span ui:field='gradedRppCount'/>
                </div>
                <div class='{style.field}'>
                   <label>Correct Percent: </label>
                   <span ui:field='gradedRppPercent'/>
                   %
                </div>            
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 