<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
	<g:HTMLPanel>
		<!-- HOTMATH BODY START -->
		<div id="tutoroutput" style='display: block;position: relative;'>
		    <div class='problem-title' ui:field="title"></div>
			<div id='tutor_raw_steps_wrapper'>
  				  <span style='font-type: italic;color: #666'>Loading ...</span>
			</div>

            <div id='steps_tail'>
                <a id='steps_prev' href='#' onclick='TutorManager.showPreviousStep();return false;'>
                    <img id="steps_prev_img" src="/images/tutor5/steps_previous-enabled.gif"/>
                </a>

                <a id='steps_next' href='#' onclick='TutorManager.showNextStep();return false;'>
                    <img id="steps_next_img" src="/images/tutor5/steps_next-enabled.gif"/>
                </a>
                
                <button class='sexybutton' id='new_problem'
                    onclick="TutorManager.newProblem();return false;" accesskey="s">
                    <span>
                        <span>Return</span>
                    </span>
                </button>
                
                <div class='cm-tutor-button-bar-bottom' style='display: none;float: right;'>
                    <a class='button debug-off' href='javascript:void(0)' onclick='expandAllSteps();return false;'>Expand
                    </a>
                </div>
                <div id='tutor_message'>
                </div>
            </div>
			<!-- HOTMATH BODY END -->
			<div id='refresh_problem_button'></div>
			<img id='scrollTo-button' src='/assets/images/spacer.gif'/>
		</div>
		<!-- END TUTOR GUTS -->
		<div ui:field="debugInfo" class='debug-hide'>$pid</div>


	</g:HTMLPanel>

</ui:UiBinder>
