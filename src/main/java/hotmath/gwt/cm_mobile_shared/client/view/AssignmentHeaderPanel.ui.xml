<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:cm="urn:import:hotmath.gwt.cm_mobile_shared.client.ui">

	<ui:style>
	    .main {
	        background: white;
	        margin: 10px;
	        font-size: 1.2em;
	        color: black;
	    }
	    
	    .form {
	        margin-top: 10px;
	        position: relative;
	        height: 40px;
	    }
	    
	    .status {
	        position: absolute;
	        left: 0px;
	    }
	    
       .grade {
            position: absolute;
            left: 200px;
        }

	    .dueDate {
	        float: right;
	        margin-right: 15px;
	        margin-left: 10px;
	        font-size: .9em;
	        color: gray;
	    }
	    
	</ui:style>

		<g:HTMLPanel styleName="{style.main}">
		    <div class='{style.dueDate}' ui:field='dueDate'></div>
		    <g:HTMLPanel ui:field="comments"/>
		    
		    <div class='{style.form}'>
        	    <div class="{style.status}">
        	        <span ui:field="status"></span> 
        	    </div>
                <div class="{style.grade}">
                    <span ui:field="grade"></span> 
                </div>
     	    </div>
     	    
    </g:HTMLPanel>
    
    


</ui:UiBinder> 